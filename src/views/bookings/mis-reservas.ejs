<div class="container my-5">
    <h2 class="text-center mb-4">Mis Reservas</h2>
    
    <% if (bookings && bookings.length > 0) { %>
        <div class="row">
            <% bookings.forEach(booking => { %>
                <div class="col-md-6 mb-4">
                    <div class="card booking-card">
                        <div class="card-body">
                            <h5 class="card-title">Reserva #<%= booking._id.toString().slice(-6) %></h5>
                            <div class="booking-details">
                                <p>
                                    <i class="fas fa-calendar-check"></i>
                                    Entrada: <%= new Date(booking.checkIn).toLocaleDateString('es-ES') %>
                                </p>
                                <p>
                                    <i class="fas fa-calendar-times"></i>
                                    Salida: <%= new Date(booking.checkOut).toLocaleDateString('es-ES') %>
                                </p>
                                <p>
                                    <i class="fas fa-users"></i>
                                    Huéspedes: <%= booking.guests.adults + (booking.guests.children || 0) %>
                                    (<%= booking.guests.adults %> adultos, <%= booking.guests.children || 0 %> niños)
                                </p>
                                <p>
                                    <i class="fas fa-euro-sign"></i>
                                    Precio Total: <%= booking.totalPrice.toFixed(2) %>€
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <div class="text-center">
            <div class="empty-bookings">
                <i class="fas fa-calendar-times fa-3x mb-3"></i>
                <h3>No tienes reservas activas</h3>
                <p class="text-muted">¿Por qué no planeas tu próxima estancia con nosotros?</p>
                <a href="/reservas" class="btn btn-primary mt-3">
                    <i class="fas fa-plus"></i> Hacer una Reserva
                </a>
            </div>
        </div>
    <% } %>
</div>