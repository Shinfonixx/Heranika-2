<section class="gallery-section py-5">
    <div class="container-fluid px-0">
        <div class="gallery-header text-center mb-5">
            <h2>Explora Nuestra Casa Rural</h2>
            <p class="lead">Descubre cada rincón de Heranika a través de nuestras imágenes</p>
        </div>
        
        <div id="imageCarousel" class="carousel slide modern-carousel" data-bs-ride="carousel">
            <div class="carousel-inner">
                <% const images = Array.from({length: 32}, (_, i) => i + 1); %>
                <% images.forEach((index, i) => { %>
                    <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
                        <div class="carousel-image-container">
                            <img src="/fotos-campo/<%= index %>.jpg" 
                                 class="d-block w-100" 
                                 alt="Imagen de Heranika <%= index %>"
                                 loading="lazy"
                                 data-bs-toggle="modal"
                                 data-bs-target="#imageModal<%= index %>">
                        </div>
                    </div>
                <% }); %>
            </div>
            
            <button class="carousel-control-prev modern-control" type="button" data-bs-target="#imageCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Anterior</span>
            </button>
            <button class="carousel-control-next modern-control" type="button" data-bs-target="#imageCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Siguiente</span>
            </button>
        </div>
    </div>
</section>

