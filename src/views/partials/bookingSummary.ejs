<div class="modal fade" id="bookingSummaryModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Resumen de Reserva</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="booking-summary">
                    <div class="summary-item">
                        <i class="fas fa-calendar-check"></i>
                        <div class="dates">
                            <p><strong>Entrada:</strong> <span id="summaryCheckIn"></span></p>
                            <p><strong>Salida:</strong> <span id="summaryCheckOut"></span></p>
                        </div>
                    </div>
                    <div class="summary-item">
                        <i class="fas fa-users"></i>
                        <div class="guests">
                            <p><strong>Huéspedes:</strong> <span id="summaryGuests"></span></p>
                        </div>
                    </div>
                    <div class="summary-item">
                        <i class="fas fa-euro-sign"></i>
                        <div class="price">
                            <p><strong>Precio Total:</strong> <span id="summaryPrice"></span>€</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" id="confirmBooking">Confirmar Reserva</button>
            </div>
        </div>
    </div>
</div>